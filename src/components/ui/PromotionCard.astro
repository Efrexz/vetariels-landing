---
import LightningIcon from "@assets/icons/lightning.svg";
import CardBackGround from "@assets/icons/cardBackground.svg";

const { discount, title, services, expirationDate, dateISO } = Astro.props;
---

<article
  class="bg-gradient-to-br from-white to-gray-50 rounded-2xl shadow-xl w-80 flex-shrink-0 border border-gray-100 hover:shadow-2xl hover:shadow-teal-500/40 hover:-translate-y-1 transition-all duration-700 group relative overflow-hidden flex flex-col"
>
  <div class="h-2 bg-teal-500"></div>
  <div class="relative z-10 text-center p-8 flex-grow flex flex-col">
    <div
      class={` bg-gradient-to-tr from-teal-500 to-teal-700 text-white text-3xl font-bold rounded-xl w-20 h-20 flex items-center justify-center mx-auto mb-6 shadow-xl group-hover:scale-110 transition-transform duration-300 transform group-hover:rotate-3`}
    >
      {discount}
    </div>

    <h3
      class="text-2xl font-extrabold text-teal-700 mb-4 transition-colors duration-300 tracking-wide"
    >
      {title}
    </h3>

    <ul class="space-y-3 mb-6 text-gray-700 text-left">
      {
        services.map((service) => (
          <li class="flex items-start group-hover:text-teal-700 transition-all duration-300 transform group-hover:translate-x-1">
            <span class="text-teal-500 mr-3 mt-1 flex-shrink-0 font-bold text-lg">
              ✓
            </span>
            <span class="text-base leading-snug">{service}</span>
          </li>
        ))
      }
      <div class="text-sm text-gray-500 mb-8 italic mt-auto">
        <span class="font-medium">Vence:</span>
        <time datetime={dateISO} class="ml-1">{expirationDate}</time>
      </div>
    </ul>

    <button
      type="button"
      class="w-full bg-teal-600 text-white py-3 px-6 rounded-xl font-bold hover:bg-teal-700 focus:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transform hover:scale-105 active:scale-95 transition-all duration-200 promocion-btn shadow-lg hover:shadow-xl group-hover:animate-pulse-once"
    >
      <span class="flex items-center justify-center">
        <LightningIcon
          class="w-5 h-5 mr-2 transition-transform duration-300 group-hover:rotate-12"
        />
        Reclamar Promoción
      </span>
    </button>
  </div>
</article>
