---
import LocationIcon from "@assets/icons/location.svg";
import ClockIcon from "@assets/icons/clock.svg";

const { name, specialty, imageUrl, location } = Astro.props;
---

<article
  class="bg-white rounded-2xl shadow-lg p-6 text-center flex flex-col items-center
    transform transition-all duration-300 ease-in-out hover:shadow-2xl hover:shadow-teal-500/40 hover:-translate-y-1.5"
  aria-labelledby={`doctor-${name.replace(/\s+/g, "-").toLowerCase()}`}
>
  <div class="h-2 bg-teal-500 w-full absolute top-0 left-0 rounded-t-2xl"></div>

  <figure class="mb-4 mt-4">
    <img
      src={imageUrl}
      alt={`Foto profesional del Dr(a). ${name}`}
      class="w-28 h-28 rounded-full object-cover bg-gray-200 ring-4 ring-teal-100"
      loading="lazy"
    />
    <figcaption class="sr-only">Foto del Dr(a). {name}</figcaption>
  </figure>

  <header class="text-center mb-4 flex-grow">
    <h3 class="text-xl font-bold text-gray-800">
      {name}
    </h3>
    <p class="font-medium text-teal-600 mt-1">{specialty}</p>
  </header>

  <div class="border-t border-gray-200 w-full my-4"></div>

  <section
    class="space-y-3 text-left w-full text-sm"
    aria-label="Información del médico"
  >
    <div class="flex items-center text-gray-700">
      <LocationIcon class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" />
      <span>Sede - {location}</span>
    </div>
    <div class="flex items-center text-gray-700">
      <ClockIcon class="w-5 h-5 mr-3 text-gray-400 flex-shrink-0" />
      <span>Horario a consultar</span>
    </div>
  </section>
</article>
