---
const { icon, title, description, includes } = Astro.props;
---

<article
  class="bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-shadow duration-300 hover:transform hover:scale-105 h-80 flex flex-col"
>
  <div class="text-4xl mb-2" role="img" aria-label={`${title} icono`}>
    {icon}
  </div>

  <header>
    <h3 class="text-xl font-semibold text-teal-700 mb-2">
      {title}
    </h3>
  </header>

  <div class="text-gray-600 mb-2">
    <p class="leading-relaxed">
      {description}
    </p>
  </div>

  <footer class="text-sm text-gray-500 mt-auto flex-shrink-0">
    <div class="border-t border-gray-200 pt-3">
      <span class="font-medium text-gray-700">Incluye:</span>
      <span class="ml-1">
        {includes}
      </span>
    </div>
  </footer>
</article>
