---
import PhoneIcon from "@assets/icons/phone.svg";

const quickLinks = [
  { href: "/#doctors", label: "Doctores" },
  { href: "/#locations", label: "Ubicaciones" },
  { href: "/#promotions", label: "Promociones" },
];

const servicesList = ["Emergencias", "Cirugia", "Cuidado Dental", "Vacunación"];

const locations = [
  {
    name: "Sede San Miguel",
    phone: "+51 954-599-221",
  },
  {
    name: "Sede San Martín de Porres",
    phone: "+51 986-985-047",
  },
  {
    name: "Sede Los Olivos",
    phone: "+51 954-599-221",
  },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-y-12 gap-x-8"
    >
      <!-- Logo y Descripción -->
      <div class="sm:col-span-2 lg:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <img
            src="/logo.webp"
            alt="Logo de VetAriel"
            class="w-48 rounded-lg"
            loading="lazy"
          />
        </div>
        <p class="text-slate-400 text-base leading-relaxed">
          Comprometidos con la salud de tu compañero fiel desde hace más de 20
          años, brindando cuidado y confianza.
        </p>
      </div>

      <nav aria-label="Enlaces rápidos del sitio">
        <h3 class="text-lg font-semibold text-white">Enlaces Rápidos</h3>
        <ul class="mt-4 space-y-3">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="hover:text-teal-400 transition-colors duration-300"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>

      <div>
        <h3 class="text-lg font-semibold text-white">Servicios</h3>
        <ul class="mt-4 space-y-3">
          {
            servicesList.map((service) => (
              <li>
                <span class="text-slate-400">{service}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-white">Nuestras Sedes</h3>
        <ul class="mt-4 space-y-4">
          {
            locations.map((loc) => (
              <li>
                <strong class="block text-white">{loc.name}</strong>
                <div class="flex items-center gap-2 mt-1 text-slate-400">
                  <PhoneIcon class="w-4 h-4" aria-hidden="true" />
                  <span>{loc.phone}</span>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <div
      class="mt-16 pt-8 border-t border-slate-800 text-center sm:text-left sm:flex sm:justify-between"
    >
      <p class="text-sm text-slate-400">
        © {currentYear} VetAriels. Todos los derechos reservados.
      </p>
      <div class="mt-4 sm:mt-0">
        <span
          class="text-sm text-slate-400 hover:text-teal-400 transition-colors duration-300"
        >
          Política de Privacidad
        </span>
        <span class="mx-2 text-slate-600">|</span>
        <span
          class="text-sm text-slate-400 hover:text-teal-400 transition-colors duration-300"
        >
          Términos de Servicio
        </span>
      </div>
    </div>
  </div>
</footer>
