---
import ServiceCard from "@components/ui/ServiceCard.astro";
import servicesData from "@data/services";
---

<section
  id="services"
  class="py-16 bg-white"
  aria-labelledby="services-heading"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="text-center mb-12">
      <h2
        id="services-heading"
        class="text-3xl md:text-4xl font-bold text-teal-700 mb-4"
      >
        Nuestros servicios
      </h2>
      <p class="text-xl text-gray-600">
        Atenci√≥n veterinaria integral para todas las etapas de la vida de tu
        mascota
      </p>
    </header>

    {/* Grid de servicios */}
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
      role="list"
      aria-label="Servicios veterinarios disponibles"
    >
      {
        servicesData.map((service) => (
          <div role="listitem">
            <ServiceCard
              icon={service.icon}
              title={service.title}
              description={service.description}
              includes={service.includes}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
