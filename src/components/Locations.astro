const apiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;

const locations = [
  {
    id: 1,
    name: "San Martín De Porres",
    address: {
      street: "Av. Los Próceres 115, con Av. José Granda",
      locality: "San Martín de Porres",
      region: "Lima",
      postalCode: "15107",
      country: "PE",
    },
    phone: "+51 986 985 047",
    imageUrl:
      "https://meridianvetre.com/wp-content/uploads/2019/07/medvet-exterior.png",
    hours: {
      weekdays: "8:00 AM - 10:00 PM",
      weekends: "9:00 AM - 6:00 PM",
    },
    coordinates: { lat: -12.02041546665544, lng: -77.0865150516204 },
  },
  {
    id: 2,
    name: "San Miguel",
    address: {
      street: "Av. Brígida Silva De Ochoa 272 II etapa, Urb. Pando",
      locality: "San Miguel",
      region: "Lima",
      postalCode: "15086",
      country: "PE",
    },
    phone: "+51 954 599 221",
    imageUrl:
      "https://meridianvetre.com/wp-content/uploads/2019/07/medvet-exterior.png",
    hours: {
      weekdays: "24/7",
      weekends: "24/7",
    },
    coordinates: { lat: -12.080677018607217, lng: -77.08802492519412 },
  },
  {
    id: 3,
    name: "Los Olivos",
    address: {
      street: "Av. Alfredo Mendiola 5521",
      locality: "Los Olivos",
      region: "Lima",
      postalCode: "15301",
      country: "PE",
    },
    phone: "+51 917104426",
    imageUrl:
      "https://meridianvetre.com/wp-content/uploads/2019/07/medvet-exterior.png",
    hours: {
      weekdays: "8:00 AM - 9:00 PM",
      weekends: "8:00 AM - 5:00 PM",
    },
    coordinates: { lat: -12.008495867831654, lng: -77.0710509284642 },
  },
];
---

<section id="locations" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-teal-700 tracking-tight">
        Nuestras Ubicaciones
      </h2>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
        Haz clic en una sede para verla en el mapa. Estamos listos para cuidar
        de tus mascotas.
      </p>
    </div>

    <div
      id="map-container"
      class="rounded-3xl shadow-lg border border-gray-100 w-full h-96 md:h-[500px] bg-gray-200 mb-16"
    >
      {/* El mapa se renderizará aquí */}
    </div>

    <!-- 2. Las Tarjetas van Después, en una cuadrícula horizontal -->
    <!-- `grid-cols-1 md:grid-cols-2 lg:grid-cols-3` hace que sea responsive -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        locations.map((location) => (
          // El wrapper de cada tarjeta sigue siendo el mismo
          <div
            data-location-id={location.id}
            data-lat={location.coordinates.lat}
            data-lng={location.coordinates.lng}
            class="location-card-wrapper cursor-pointer"
          >
            <LocationCard
              name={`${location.name}`}
              address={location.address}
              phone={location.phone}
              hours={location.hours}
              whatsapp={location.phone.replace(/\s+/g, "")}
              imageUrl={location.imageUrl}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>

<!--  ESTILOS PARA LA TARJETA ACTIVA -->
<style>
  .location-card-wrapper {
    transition:
      transform 0.2s ease-out,
      box-shadow 0.2s ease-out;
  }
  .location-card-wrapper.active,
  .location-card-wrapper:hover {
    transform: scale(1.02);
    box-shadow:
      0 10px 15px -3px rgb(0 0 0 / 0.1),
      0 4px 6px -4px rgb(0 0 0 / 0.1);
    outline: 2px solid theme("colors.teal.500");
    border-radius: 1rem;
  }
</style>

<script is:inline define:vars={{ apiKey, locations }}>
  window.initMap = function () {
    try {
      const mapContainer = document.getElementById("map-container");
      if (!mapContainer) return;

      const map = new google.maps.Map(mapContainer, {
        zoom: 12,
        center: { lat: -12.0464, lng: -77.0428 },
        disableDefaultUI: true,
        zoomControl: true,
      });

      locations.forEach((location) => {
        new google.maps.Marker({
          position: location.coordinates,
          map: map,
          title: `VetAriel - Sede ${location.name}`,
        });
      });

      const locationCards = document.querySelectorAll(".location-card-wrapper");
      locationCards.forEach((card) => {
        card.addEventListener("click", () => {
          locationCards.forEach((c) => c.classList.remove("active"));
          card.classList.add("active");
          const lat = parseFloat(card.dataset.lat);
          const lng = parseFloat(card.dataset.lng);
          map.panTo({ lat, lng });
          map.setZoom(16);
        });
      });
    } catch (error) {
      console.error("Ocurrió un error al inicializar el mapa:", error);
    }
  };

  if (apiKey) {
    const script = document.createElement("script");
    script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initMap&v=weekly`;
    script.async = true;
    script.defer = true;
    document.body.appendChild(script);
  } else {
    console.error("API Key de Google Maps no encontrada.");
  }
</script>
