---
import DoctorCard from "@components/ui/DoctorCard.astro";

const doctors = [
  {
    id: "lucia-alvarado",
    name: "Dra. Lucía Alvarado",
    imageUrl:
      "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    specialty: "Dermatología Veterinaria",
    experience: 12,
    location: "San Martín de Porres",
    schedule: "Lunes a Viernes de 8 a.m. a 6 p.m.",
  },
  {
    id: "rafael-colmenares",
    name: "Dr. Rafael Colmenares",
    imageUrl:
      "https://images.unsplash.com/photo-1612349317150-e413f6a5b16d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    specialty: "Cuidados Críticos",
    experience: 8,
    location: "San Miguel",
    schedule: "Martes a Sábado de 9 a.m. a 5 p.m.",
  },
  {
    id: "alejandra-del-rio",
    name: "Dra. Alejandra Del Río",
    imageUrl:
      "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    specialty: "Cirugía y Ortopedia",
    experience: 15,
    location: "Los Olivos",
    schedule: "Martes a Sábado de 9 a.m. a 5 p.m.",
  },
  {
    id: "diego-romero",
    name: "Dr. Diego Romero",
    imageUrl:
      "https://images.unsplash.com/photo-1582750433449-648ed127bb54?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80",
    specialty: "Medicina Felina",
    experience: 10,
    location: "San Martín de Porres",
    schedule: "Miércoles a Domingo de 10 a.m. a 4 p.m.",
  },
];
---

<section
  id="doctors"
  aria-labelledby="doctors-title"
  class="bg-gradient-to-r from-[#f0fdfa] to-[#eff6ff] py-16 sm:py-24"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="text-center mb-12">
      <h2
        id="doctors-title"
        class="text-3xl md:text-4xl font-bold text-teal-700 tracking-tight"
      >
        Conoce a Nuestros Veterinarios
      </h2>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
        Nuestro equipo está comprometido con brindar atención experta y cercana
        a tus mascotas.
      </p>
    </header>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8"
      role="list"
      aria-label="Lista de veterinarios"
    >
      {
        doctors.map((doctor) => (
          <DoctorCard
            key={doctor.id}
            name={doctor.name}
            specialty={doctor.specialty}
            experience={doctor.experience}
            location={doctor.location}
            schedule={doctor.schedule}
            imageUrl={doctor.imageUrl}
          />
        ))
      }
    </div>
  </div>
</section>
